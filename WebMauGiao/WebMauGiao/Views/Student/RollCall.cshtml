}
<style>
    th, td {
        white-space: nowrap;
    }

    select {
        width: 150px;
    }
</style>
<div class="page-header">
    <div class="row">
        <div class="col-sm-3">
            <label style="padding-right:20px;">Chọn lớp:</label>
            <select id="select_Class">
                <option selected>Chọn lớp</option>
                @foreach (var item in ListClass)
                {
                    <option value="@item.ClassID">@item.Name</option>
                }
            </select>
        </div>
        <div class="col-sm-3">
            <label style="padding-right:20px;"> Năm học:</label>
            <select id="select_Year">
                @for (int i = 2008; i <= 2025; i++)
                {
                    if (DateTime.Today.Month <= 6 && i == DateTime.Today.Year - 1)
                    {
                        <option data-start="@i" data-end="@(i+1)" selected>@i &nbsp;- &nbsp; @(i + 1)</option>
                    }
                    else if (DateTime.Today.Month > 6 && i == DateTime.Today.Year + 1)
                    {
                        <option data-start="@i" data-end="@(i+1)" selected>@i &nbsp;- &nbsp; @(i + 1)</option>
                    }
                    else
                    {
                        <option data-start="@i" data-end="@(i+1)">@i &nbsp;- &nbsp; @(i + 1)</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-3">
            <label style="padding-right:20px;">Chọn tháng:</label>
            <select id="select_Month">
                @for (int i = 1; i < 13; i++)
                {
                    if (i == DateTime.Today.Month)
                    {
                        <option value="@i" selected>Tháng &nbsp;@i</option>
                    }
                    else
                    {
                        <option value="@i">Tháng &nbsp;@i</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-3">
            <button type="button" class="btn btn-primary" id="btn_view">Xem bảng điểm danh</button>
        </div>
    </div>
</div>
